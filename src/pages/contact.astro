---
import Layout from "../layouts/Layout.astro";
import Section from "../components/Section.astro";
import Container from "../components/Container.astro";
import Button from "../components/Button.astro";
import { Icon } from "astro-icon";
import ContactForm from "../components/ContactForm.astro";
import CTA from "../components/CTA.astro";
---

<Layout>
  <Section>
    <Container>
      <div class="contact--wrapper">
        <div>
          <h1 class="contact--heading">Contact Me</h1>
          <p class="contact--subheading">
            I want to make it as easy as possible to get in touch with me.
            Either fill out the form below or click on the button to email me
            directly, and I'll get back to you ASAP.
          </p>
          <Button
            href="mailto:jeff@morethan-engineering.com"
            isOutlined="true"
            label="Send me an email"
          >
            <Icon pack="heroicons-solid" name="mail" slot="icon--left" />
          </Button>
        </div>
      </div>
    </Container>
  </Section>
  <Section>
    <Container>
      <ContactForm />
    </Container>
  </Section>
  <CTA />
</Layout>

<style lang="scss">
  @import "../styles/variables.scss";

  [astro-icon] {
    display: inline-block;
    width: 1.25rem;
    height: 1.25rem;
  }

  .contact--wrapper {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    text-align: center;
    margin-inline: auto;
    width: 100%;
    max-width: 35.625rem;
  }
  .contact--heading {
    margin-bottom: map-get($spacing, "400");
  }
  .contact--subheading {
    margin-bottom: map-get($spacing, "600");
  }
</style>
