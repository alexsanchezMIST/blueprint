---
export interface Props {
  href?: string;
  size?: string;
  label: string;
  isBlank?: string;
}

const { label, href, isBlank } = Astro.props as Props;
---

<a class="btn--white" href={href} target={isBlank === "true" ? "_blank" : ""}
  ><slot name="icon--left"></slot>{label}<slot name="icon--right"></slot>
</a>

<style lang="scss">
  @import "../styles/variables.scss";
  .btn--white {
    display: inline-flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    gap: map-get($spacing, "200");
    padding-block: map-get($spacing, "400");
    padding-inline: map-get($spacing, "500");
    border-radius: 0.25rem;
    cursor: pointer;
    font-size: map-get($font-size, "400");
    line-height: 1;
    font-weight: 500;
    text-align: center;
    white-space: no-wrap;
    background-color: $white;
    border: 1px solid map-get($secondary, "500");
    color: map-get($secondary, "500");
    transition: all 0.3s ease-in-out;

    &:hover {
      background-color: map-get($secondary, "400");
      border-color: map-get($secondary, "400");
      color: $white;
    }

    &:active {
      background-color: map-get($secondary, "600");
      border-color: map-get($secondary, "600");
      color: $white;
    }
  }
</style>
