---
import Section from "./Section.astro";
import Container from "./Container.astro";
import Logo from "./Logo.astro";

const date = new Date().getFullYear();
---

<footer id="footer" class="footer">
  <Section>
    <Container>
      <div class="footer--grid">
        <div class="footer--col">
          <Logo />
          <p class="footer--copy">
            Hi, I'm Jeff Perry, a leadership and career coach for engineers. I
            LOVE seeing my clients upgrade their mindsets, lives, and careers as
            we take a holistic approach to personal development.
          </p>
        </div>
        <div class="footer--col">
          <h6 class="footer--heading">Links</h6>
          <ul class="footer--menu">
            <li class="footer--link">
              <a href="/">Home</a>
            </li>
            <li class="footer--link">
              <a href="/about">About</a>
            </li>
            <li class="footer--link">
              <a href="/blog">Blog</a>
            </li>
            <li class="footer--link">
              <a href="/podcasts">Podcasts</a>
            </li>
            <li class="footer--link">
              <a href="/services">Services</a>
            </li>
            <li class="footer--link">
              <a href="/contact">Contact</a>
            </li>
          </ul>
        </div>
        <div class="footer--col">
          <h6 class="footer--heading">Resources</h6>
          <ul class="footer--menu">
            <li class="footer--link">
              <a
                href="https://www.engineeringcareeraccelerator.com/career-clarity"
                target="_blank"
                >Career Clarity Checklist
              </a>
            </li>
            <li class="footer--link">
              <a
                href="https://www.engineeringcareeraccelerator.com/linkedin-guide"
                target="_blank"
                >The Ultimate LinkedIn Profile Guide
              </a>
            </li>
            <li class="footer--link">
              <a
                href="https://www.engineeringcareeraccelerator.com/90days"
                target="_blank"
                >Accelerate Your Leadership 90 Day Plan
              </a>
            </li>
            <li class="footer--link">
              <a
                href="https://www.engineeringcareeraccelerator.com/mentor-questions"
                target="_blank"
                >48 Amazing Questions to Ask Your Mentor
              </a>
            </li>
          </ul>
        </div>
        <div class="footer--col">
          <h6 class="footer--heading">Legal</h6>
          <ul class="footer--menu">
            <li class="footer--link">
              <a href="/">Privacy Policy</a>
            </li>
            <li class="footer--link">
              <a href="/about">Terms and Conditions</a>
            </li>
          </ul>
        </div>
      </div>
    </Container>
  </Section>
  <div class="footer--bottom">
    <p class="footer--copyright">
      Â© Copyright {date} - More Than Engineering. All rights reserved.
    </p>
  </div>
</footer>

<style lang="scss">
  @import "../styles/variables.scss";

  .footer--grid {
    display: grid;
    grid-template-columns: repeat(1, minmax(0, 1fr));
    grid-auto-rows: min-content;
    gap: map-get($spacing, "300");

    @media screen and (min-width: map-get($breakpoints, "md")) {
      grid-template-columns: repeat(2, minmax(0, 1fr));
      gap: map-get($spacing, "600");
    }

    @media screen and (min-width: map-get($breakpoints, "lg")) {
      grid-template-columns: repeat(4, minmax(0, 1fr));
      grid-template-rows: repeat(1, minmax(0, 1fr));
      grid-auto-rows: unset;
      gap: map-get($spacing, "900");
    }
  }

  .footer--col {
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: flex-start;
  }

  .footer--heading {
    margin-bottom: map-get($spacing, "200");
  }

  .footer--copy,
  .footer--link {
    font-size: map-get($font-size, "300");
    line-height: 1;
    color: map-get($neutrals, "400");
  }

  .footer--copy {
    margin-top: map-get($spacing, "400");
  }

  .footer--link {
    margin-block: map-get($spacing, "300");
    transition: color 0.3s ease-in-out;

    &:hover {
      color: map-get($secondary, "500");
    }
  }

  .footer--bottom {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    width: 100%;
    padding-block: map-get($spacing, "300");
    border-top: 1px solid map-get($primary, "500");
  }

  .footer--copyright {
    font-size: map-get($font-size, "300");
    line-height: 1;
  }
</style>
