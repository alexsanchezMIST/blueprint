<style is:global lang="scss">
  @import "../styles/preflight.scss";
  @import "../styles/font-face.scss";
  @import "../styles/variables.scss";

  html {
    scroll-behavior: smooth;
  }

  body {
    font-family: "General Sans", sans-serif;
    overflow-x: hidden;
  }

  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    line-height: calc($line-height / 1.05);
    color: map-get($neutrals, "900");
  }

  h1,
  h2,
  h3 {
    font-weight: 600;
  }

  h1 {
    font-size: map-get($font-size, "800");
    letter-spacing: map-get($letter-spacing, "tighter");
  }

  h2 {
    font-size: map-get($font-size, "700");
    letter-spacing: map-get($letter-spacing, "tight");
  }

  h3 {
    font-size: map-get($font-size, "600");
  }

  h4,
  h5,
  h6 {
    font-weight: 500;
  }

  h4 {
    font-size: map-get($font-size, "500");
  }

  h5,
  h6 {
    font-size: map-get($font-size, "400");
  }

  p {
    font-size: map-get($font-size, "400");
    line-height: $line-height;
    font-weight: 400;
    color: map-get($neutrals, "400");
  }

  strong {
    font-weight: 600;
    color: map-get($neutrals, "700");
  }

  .mx-auto {
    margin-inline: auto;
  }

  .mb-1 {
    margin-bottom: map-get($spacing-pairs, "from-100-to-200");
  }

  .mb-2 {
    margin-bottom: map-get($spacing-pairs, "from-200-to-300");
  }

  .mb-3 {
    margin-bottom: map-get($spacing-pairs, "from-300-to-400");
  }

  .mb-4 {
    margin-bottom: map-get($spacing-pairs, "from-400-to-500");
  }

  .mb-5 {
    margin-bottom: map-get($spacing-pairs, "from-500-to-600");
  }

  .mb-6 {
    margin-bottom: map-get($spacing-pairs, "from-600-to-700");
  }

  .mb-7 {
    margin-bottom: map-get($spacing-pairs, "from-700-to-800");
  }

  .mb-8 {
    margin-bottom: map-get($spacing-pairs, "from-800-to-900");
  }

  .py-1 {
    padding-block: map-get($spacing-pairs, "from-100-to-200");
  }

  .py-2 {
    padding-block: map-get($spacing-pairs, "from-200-to-300");
  }

  .py-3 {
    padding-block: map-get($spacing-pairs, "from-300-to-400");
  }

  .py-4 {
    padding-block: map-get($spacing-pairs, "from-400-to-500");
  }

  .py-5 {
    padding-block: map-get($spacing-pairs, "from-500-to-600");
  }

  .py-6 {
    padding-block: map-get($spacing-pairs, "from-600-to-700");
  }

  .py-7 {
    padding-block: map-get($spacing-pairs, "from-700-to-800");
  }

  .py-8 {
    padding-block: map-get($spacing-pairs, "from-800-to-900");
  }
  h1 .span {
    padding: 0.25rem 1rem;
    background-color: map-get($primary, "500");
    box-shadow: 0 10px 15px -3px rgba($black, 0.1),
      0 4px 6px -4px rgba($black, 0.1);
    color: white;
  }

  h1 .span,
  h2 .span {
    display: inline-block;
    transform: rotate(-2.5deg);
  }

  h2 .span {
    padding: 0.25rem 0.75rem;
    background-color: $white;
    box-shadow: 0 4px 6px -1px rgba($black, 0.1),
      0 2px 4px -2px rgba($black, 0.1);
    color: map-get($primary, "400");
  }

  [astro-icon] {
    display: inline-block;
    width: 1.25rem;
    height: 1.25rem;
  }

  [x-cloak],
  .is-hidden {
    display: none !important;
  }

  .wp-block-embed-youtube {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
  }

  .wp-block-button {
    margin-block: map-get($spacing, "600");
  }

  .wp-block-button.aligncenter {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
  }

  .wp-block-button__link {
    display: inline-flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    gap: map-get($spacing, "200");
    padding-block: map-get($spacing, "400");
    padding-inline: map-get($spacing, "500");
    background-color: map-get($secondary, "500");
    border: 1px solid transparent;
    border-radius: 0.25rem;
    cursor: pointer;
    font-size: map-get($font-size, "400");
    line-height: 1;
    font-weight: 500;
    text-align: center;
    color: $white;
    white-space: no-wrap;
    transition: background-color 0.3s ease-in-out;

    &:hover {
      background-color: map-get($secondary, "400");
    }

    &:active {
      background-color: map-get($secondary, "600");
    }

    & + & {
      margin-left: map-get($spacing, "300");
    }
  }
</style>
