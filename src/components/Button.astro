---
export interface Props {
  isOutlined?: string;
  href?: string;
  size?: string;
  label: string;
}

const { isOutlined, label, href } = Astro.props as Props;
---

<a class={isOutlined === "true" ? "is-outlined" : ""} href={href}
  ><slot name="icon--left"></slot>{label}<slot name="icon--right"></slot>
</a>

<style lang="scss">
  @import "../styles/variables.scss";
  a {
    display: inline-flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    gap: map-get($spacing, "200");
    padding-block: map-get($spacing, "400");
    padding-inline: map-get($spacing, "500");
    background-color: map-get($secondary, "500");
    border: 1px solid transparent;
    border-radius: 0.25rem;
    cursor: pointer;
    font-size: map-get($font-size, "400");
    line-height: 1;
    font-weight: 500;
    text-align: center;
    color: $white;
    white-space: no-wrap;
    transition: background-color 0.3s ease-in-out;

    &:hover {
      background-color: map-get($secondary, "400");
    }

    &:active {
      background-color: map-get($secondary, "600");
    }

    & + & {
      margin-left: map-get($spacing, "300");
    }
  }

  .is-small {
    padding-block: map-get($spacing, "300");
    padding-inline: map-get($spacing, "400");
    border-radius: 0.125rem;
  }

  .is-large {
    padding-block: map-get($spacing, "500");
    padding-inline: map-get($spacing, "600");
    border-radius: 0.5rem;
  }

  .is-outlined {
    background-color: $white;
    border: 1px solid map-get($secondary, "500");
    color: map-get($secondary, "500");
    transition: all 0.3s ease-in-out;

    &:hover {
      border-color: map-get($secondary, "400");
      color: $white;
    }

    &:active {
      border-color: map-get($secondary, "600");
      color: $white;
    }
  }
</style>
