---
export interface Props {
  title: string;
  body: string;
  href?: string;
  icon?: string;
}
const { href, icon, title, body } = Astro.props as Props;
---

<div class="card--wrapper">
  <a href={href} class="card">
    <img src={icon} alt="" class="card--icon" />
    <h5 class="card--heading">
      {title}
    </h5>
    <p class="card--content">{body}</p>
    <p class="card--link">Learn more</p>
  </a>
</div>

<style lang="scss">
  @import "../styles/variables.scss";

  .card--wrapper {
    padding-block: map-get($spacing, "600");
    padding-inline: map-get($spacing, "500");
    background-color: transparent;
    border: 1px solid transparent;
    border-radius: 0.5rem;
    transition: all 0.3s ease-in-out;

    ::marker {
      display: none;
    }

    &:hover {
      background-color: $white;
      border: 1px solid map-get($neutrals, "50");
      box-shadow: 0 10px 15px -3px rgba($black, 0.1),
        0 4px 6px -4px rgba($black, 0.1);
    }
  }

  .card--icon {
    width: 2.5rem;
    height: 2.5rem;
    margin-bottom: map-get($spacing, "200");
  }

  .card--heading {
    margin-bottom: map-get($spacing, "400");
  }

  .card--content {
    margin-bottom: map-get($spacing, "400");
    font-size: map-get($font-size, "300");
  }

  .card--link {
    font-size: map-get($font-size, "300");
    font-weight: 500;
    color: map-get($secondary, "500");
  }
</style>
