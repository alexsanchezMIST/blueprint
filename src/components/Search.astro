---
import { Icon } from "astro-icon";
---

<form
  role="search"
  method="GET"
  action="https://admin.morethaneng.com/"
  class="wp-block-search__no-button wp-block-search search--form is-hidden"
>
  <label
    for="wp-block-search__input-1"
    class="wp-block-search__label screen-reader-text"
    >Search all posts
  </label>
  <div class="wp-block-search__inside-wrapper input--wrapper">
    <input
      type="search"
      id="wp-block-search__input-1"
      class="wp-block-search__input"
      name="s"
      placeholder="Search ..."
      required
    />
    <button class="search--icon"
      ><Icon pack="heroicons-solid" name="search" />
    </button>
  </div>
</form>

<style lang="scss">
  @import "../styles/variables.scss";

  .search--form {
    width: min(100%, 35.625rem);
    height: auto;
    margin-inline: auto;
    outline: 2px solid rgba(map-get($secondary, "500"), 0.5);
    border-radius: 0.125rem;
  }

  label {
    display: none;
  }

  .input--wrapper {
    position: relative;
  }

  input[type="search"] {
    width: 100%;
    height: 100%;
    padding-block: map-get($spacing, "300");
    padding-inline: map-get($spacing, "400");
    background-color: $white;
    border: 1px solid map-get($neutrals, "100");
    border-radius: 0.125rem;
    box-shadow: 0 25px 50px -12px rgba($black, 0.25);
    transition: all 0.3s;

    &:focus-visible {
      outline-color: map-get($primary, "500");
    }
  }

  .search--icon {
    position: absolute;
    top: 50%;
    right: map-get($spacing, "400");
    transform: translateY(-50%);
    width: 1rem;
    height: 1rem;
    opacity: 0.5;
  }
</style>
