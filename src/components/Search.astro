---
import { Icon } from "astro-icon";
---

<form action="#" class="search--form">
  <label for="search">Search all posts</label>
  <div class="input--wrapper">
    <input type="search" name="search" id="search" placeholder="Search ..." />
    <button class="search--icon"
      ><Icon pack="heroicons-solid" name="search" />
    </button>
  </div>
</form>

<style lang="scss">
  @import "../styles/variables.scss";

  .search--form {
    width: min(100%, 35.625rem);
    height: auto;
    margin-inline: auto;
  }

  label {
    display: none;
  }

  .input--wrapper {
    position: relative;
  }

  input[type="search"] {
    width: 100%;
    height: 100%;
    padding-block: map-get($spacing, "300");
    padding-inline: map-get($spacing, "400");
    background-color: $white;
    border: 1px solid map-get($neutrals, "100");
    border-radius: 0.125rem;
    box-shadow: 0 25px 50px -12px rgba($black, 0.25);
    transition: all 0.3s;

    &:focus-visible {
      outline-color: map-get($primary, "500");
    }
  }

  .search--icon {
    position: absolute;
    top: 50%;
    right: map-get($spacing, "400");
    transform: translateY(-50%);
    width: 1rem;
    height: 1rem;
    opacity: 0.5;
  }
</style>
