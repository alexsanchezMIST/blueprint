---
import Meta from "../components/Meta.astro";
import GlobalStyles from "../components/GlobalStyles.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<!DOCTYPE html>
<html lang="en">
  <GlobalStyles />

  <Meta
    title="More Than Engineering"
    description="Description"
    permalink="Permalink"
    image="Image"
  />

  <body class="body">
    <Header />
    <main id="main--content" class="main">
      <slot></slot>
    </main>
    <Footer />
    <style lang="scss">
      @import "../styles/variables.scss";
      body {
        font-family: sans-serif;
        background-image: linear-gradient(
          to bottom,
          $white,
          map-get($primary, "50")
        );

        &::before {
          content: "";
          position: fixed;
          z-index: 50;
          top: 0;
          right: 0;
          bottom: 0;
          left: 0;
          width: 100%;
          max-width: map-get($breakpoints, "xxl");
          margin-inline: auto;
          border-left: 1px dashed map-get($primary, "400");
          border-right: 1px dashed map-get($primary, "400");
        }

        &::after {
          content: "";
          position: fixed;
          z-index: 25;
          top: 0;
          right: 0;
          bottom: 0;
          left: 0;
          width: 100%;
          height: 100%;
          background-image: url("/assets/graph-paper.svg");
          background-repeat: repeat;
          background-position: center center;
          background-size: 5rem;
          opacity: 0.15;
          background-blend-mode: overlay;
        }
      }

      main {
        position: relative;
        z-index: 100;
        margin-top: 5rem;
      }
    </style>
  </body>
</html>
